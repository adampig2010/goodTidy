    script.
      // 登出鍵
      $('#logout-btn').click(async function () {
        let data = '';

        let config = {
          method: 'GET',
          url: `/api/1.0/user/logout`,
          data: data,
        };

        await axios(config)
          .then(function (response) {
            console.log(response);
            Swal.fire({
              icon: 'success',
              title: '登出成功',
              showConfirmButton: false,
              timer: 1500
            }).then(function() {
                window.location.assign('/signin');
            });
          })
          .catch(function (error) {
            console.log(error);
            Swal.fire({
              icon: 'error',
              title: '登出失敗',
              showConfirmButton: false,
              timer: 1500
            }).then(function() {
                window.location.assign('/signin');
            });
          });
      });

      // Socket ------------------------------------------

      // Socket 被喜歡的推播
      socket.on('saved_msg', async function(msg){
        await getUserMsg();
        await showUserMsg();
        Swal.fire(msg)
      })

      //- Socket 有人分享筆記給你
      socket.on('shareToyou_msg', async function(shareUserEmail){
        // TODO: 更新上方推播通知
        Swal.fire(`${shareUserEmail}分享筆記給您`);
        await getUserMsg();
        await showUserMsg();
        await getUserNotes();
        
      })

      //- Socket 有人刪除他的分享筆記
      socket.on('delete_shareToyou_msg', async function(delete_user_email){
        // TODO: 換成上方推播通知
        Swal.fire(`${delete_user_email}的一篇筆記取消對你的分享`);
        await getUserMsg();
        await showUserMsg();
        await getUserNotes();
      });

      $(document).on('click', '.msg-close', async function(e){
          const msg_id = e.target.id;
          await deleteMsg(msg_id);
          await getUserMsg();
          await showUserMsg();
      })

      