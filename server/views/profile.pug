extends layout_noSideBar.pug

block content
    main#main.main(style="margin-left:0px;")
      .pagetitle
        h1 個人資訊
      section.section.profile
        .row
          .col-xl-4
            .card
              .card-body.profile-card.pt-4.d-flex.flex-column.align-items-center(style="height:235px;justify-content: space-around;")
                img.rounded-circle(src=picture, alt='Profile')
                h2=name
                h3=email
          .col-xl-8
            .card
              .card-body.pt-3
                // Bordered Tabs
                ul.nav.nav-tabs.nav-tabs-bordered
                  li.nav-item
                    button.nav-link.active(data-bs-toggle='tab', data-bs-target='#profile-overview') 總覽
                .tab-content.pt-2
                  #profile-overview.tab-pane.fade.show.active.profile-overview
                    h5.card-title 使用者資訊
                    .row
                      .col-lg-3.col-md-4.label 名稱
                      .col-lg-9.col-md-8=name
                    .row
                      .col-lg-3.col-md-4.label Email
                      .col-lg-9.col-md-8=email
                  #profile-edit.tab-pane.fade.profile-edit.pt-3
                    // Profile Edit Form
                    form
                      .row.mb-3
                        label.col-md-4.col-lg-3.col-form-label(for='profileImage') Profile Image
                        .col-md-8.col-lg-9
                          img(src='assets/img/profile-img.jpg', alt='Profile')
                          .pt-2
                            a.btn.btn-primary.btn-sm(href='#', title='Upload new profile image')
                              i.bi.bi-upload
                            a.btn.btn-danger.btn-sm(href='#', title='Remove my profile image')
                              i.bi.bi-trash
                      .row.mb-3
                        label.col-md-4.col-lg-3.col-form-label(for='fullName') Full Name
                        .col-md-8.col-lg-9
                          input#fullName.form-control(name='fullName', type='text', value='')
                      .row.mb-3
                        label.col-md-4.col-lg-3.col-form-label(for='about') About
                        .col-md-8.col-lg-9
                          textarea#about.form-control(name='about', style='height: 100px')